rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // تحقق من هوية المستخدم الحالي
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // تحقق من أن المستخدم يعدل بيانات نفسه فقط
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // منع الوصول بشكل افتراضي
    match /{document=**} {
      allow read, write: if false;
    }
    
    // مجموعة المستخدمين - users collection
    match /users/{userId} {
      // كل مستخدم يقرأ بيانات نفسه فقط
      allow read: if isOwner(userId);
      
      // كل مستخدم يعدل بيانات نفسه فقط
      allow write: if isOwner(userId) && validateUserData();
      
      // التحقق من صحة بيانات المستخدم
      function validateUserData() {
        let data = request.resource.data;
        return data.keys().hasAll(['name', 'avatarId', 'createdAt']) &&
               data.name is string &&
               data.avatarId is number &&
               data.createdAt is timestamp &&
               data.name.size() > 0 &&
               data.name.size() <= 100 &&
               data.avatarId >= 1 && data.avatarId <= 10;
      }
    }
    
    // مجموعة المسارات - paths collection (قراءة عامة)
    match /paths/{pathId} {
      // جميع المستخدمين يمكنهم قراءة المسارات المتاحة
      allow read: if true;
      
      // منع الكتابة (البيانات من الـ seed فقط)
      allow write: if false;
    }
    
    // مجموعة الدروس - lessons collection (قراءة عامة)
    match /lessons/{lessonId} {
      // جميع المستخدمين يمكنهم قراءة الدروس
      allow read: if true;
      
      // منع الكتابة (البيانات من الـ seed فقط)
      allow write: if false;
    }
    
    // مجموعة التقدم - progress collection
    match /progress/{progressId} {
      // المستخدم يقرأ تقدمه الخاص فقط
      allow read: if isOwner(getOwnerFromProgressId());
      
      // المستخدم يعدل تقدمه الخاص فقط
      allow write: if isOwner(getOwnerFromProgressId()) && validateProgressData();
      
      // استخرج معرف المستخدم من معرف التقدم (format: userId_lessonId)
      function getOwnerFromProgressId() {
        return resource.data.userId;
      }
      
      // التحقق من صحة بيانات التقدم
      function validateProgressData() {
        let data = request.resource.data;
        return data.keys().hasAll(['userId', 'lessonId', 'completed', 'completedAt']) &&
               data.userId is string &&
               data.lessonId is string &&
               data.completed is bool &&
               data.completedAt is timestamp;
      }
    }
  }
}
